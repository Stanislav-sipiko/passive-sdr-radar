[Unit]
Description=Passive Radar Fusion Server
After=network.target

[Service]
ExecStart=/usr/bin/python3 -m passive_radar.network.fusion_server
WorkingDirectory=/home/pi/passive-sdr-radar
Restart=always
User=pi

[Install]
WantedBy=multi-user.target

```bash
sudo cp passive_radar/network/passive_radar_fusion.service /etc/systemd/system/
sudo systemctl enable passive_radar_fusion.service
sudo systemctl start passive_radar_fusion.service
```
